<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Search Page</title>
  <link rel="stylesheet" href="/styles/index.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<%- include('./partials/header.ejs') %>
<body>
<div class = "searchPage">
<div class="home">
  <h1>Welcome <%= user.first_name %> <%= user.last_name %>!</h1>
  <h2>Newfie Nook Search:</h2>

  <!-- Form for search query, database selection, and user ID -->
  <div class="searchEngine">
    <form id="search-form" action="/search/" method="POST">
      <label for="search">Search:</label>
      <input type="text" id="search" name="search" placeholder="Enter your search for customers, products, vendors, & recipes.." required>
      
      <!-- Dropdown for selecting database -->
      <label for="database">Select Database:</label>
      <select id="database" name="database">
        <option value="pg">PostgreSQL - Customers, Products, & Vendor Search</option>
        <option value="mongo">MongoDB - Recipes Search </option>
        <option value="both">Both</option>
      </select>
      
      <!-- Hidden input field to capture user ID -->
      <input type="hidden" id="customer-id" name="customer_id" value="<%= user.customer_id %>">
      <br />
      <button class="submitButton" id="submit" type="submit">Search</button>
    </form>
  </div>

  <div id="search-results-container">
    <!-- Show loading spinner or message while fetching data -->
    <div id="loading-indicator" style="display: none;">
      <img src="../images/loading.gif" alt="Loading Spinner">
      <p>Loading...</p>
    </div>
  
    <!-- Actual search results will be displayed here -->
    <div id="search-results">
      <!-- Search results will be dynamically populated here -->
    </div>
    <br />


    <h3>Search Options:</h3>
    <a href="/customer/search/">Search Customers</a>
    <a href="/product/search/">Search Products</a>
    <br />
  <h3>See All Items:</h3>
    <a href="/customer/all/">All Customers</a>
    <a href="/product/all/">All Products</a>
    <a href="/recipe/all/">All Recipes</a>
    <br />
  <h3>User Options:</h3>
    <a href="/signup/">Sign Up New Customer</a>
    <a href="/index/">Other Options</a>
    <a href="/login/">Login</a>
    <a href="/logout/">Logout</a>


  </div>
</div>
</div>

<script>
  $('#search-form').on('submit', function(event) {
  event.preventDefault();

  // Show loading indicator
  $('#loading-indicator').show();

  // Get the user_id, query, and database
  var user_id = $('#customer-id').val();
  var query = $('#search').val(); 
  var database = $('#database').val();

  // Send an AJAX request to the server
  $.ajax({
    url: '/search/', 
    method: 'POST',
    data: {
      user_id: user_id,
      query: query,
      database: database
    },
    success: function(response) {
  // Hide loading indicator
  $('#loading-indicator').hide();

  // Display search results in the container
  $('#search-results').html(response);
},
    error: function(xhr, status, error) {
      // Hide loading indicator
      $('#loading-indicator').hide();

      // Display error message
      $('#search-results').html('<p>An error occurred. Please try again later.</p>');

      // Hide pagination controls
      $('.pagination').hide();

      console.error('Error:', error);
    }
  });
});

</script>
</body>
<%- include('./partials/footer.ejs') %>
</html>
