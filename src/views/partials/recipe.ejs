<% if (theRecipes && theRecipes.length > 0) { %>
  <% theRecipes.forEach(function(recipe) { %>
    <div class="recipeDiv">
      <div class="label-data-pair">
          <b>Recipe ID:</b> <%= recipe._id %>
      </div>
      <div class="label-data-pair">
          <b>Recipe Name:</b> <%= recipe.title %>
      </div>
      <br />
    </div>
  <% }) %>
<% } else { %>
  <p>No recipes found.</p>
<% } %>